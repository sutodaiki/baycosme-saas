<div class="saas-home-container">
  <div class="hero-content">
    <h1>⚡ AI COSMETIC LAB</h1>
    <p class="hero-subtitle">🚀 NEXT-GEN FORMULATION PROTOCOL</p>
    <p class="hero-description">Advanced AI algorithms analyze your skin biometrics to generate personalized cosmetic formulations with blockchain-verified ingredients</p>
    
    <!-- Web3 Stats -->
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-number">1,337</div>
        <div class="stat-label">FORMULATIONS GENERATED</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">42K</div>
        <div class="stat-label">ACTIVE USERS</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">99.9%</div>
        <div class="stat-label">SUCCESS RATE</div>
      </div>
    </div>
  </div>
  
  <% if user_signed_in? %>
    <div class="user-dashboard">
      <p class="welcome-message">おかえりなさい、<%= current_user.email %> さん！</p>
      
      <div class="dashboard-actions">
        <%= link_to mypage_path, class: "btn btn-primary btn-large" do %>
          👤 マイページ
        <% end %>
        
        <%= link_to new_cosmetic_formulation_path, class: "btn btn-outline" do %>
          🧬 新しい処方を作成
        <% end %>
        
        <%= link_to cosmetic_formulations_path, class: "btn btn-outline" do %>
          📚 処方履歴を見る
        <% end %>
      </div>
      
      <% recent_formulations = current_user.cosmetic_formulations.limit(3).order(created_at: :desc) %>
      <% if recent_formulations.any? %>
        <div class="recent-formulations">
          <h3>最近の処方</h3>
          <div class="recent-grid">
            <% recent_formulations.each do |formulation| %>
              <div class="recent-card">
                <div class="recent-header">
                  <%= formulation.product_type_name %>
                  <span class="recent-date"><%= formulation.created_at.strftime("%m/%d") %></span>
                </div>
                <div class="recent-info">
                  <%= formulation.skin_type_name %> | <%= formulation.target_age_name %>
                </div>
                <%= link_to "詳細", formulation, class: "recent-link" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <div class="logout-section">
        <%= link_to "ログアウト", destroy_user_session_path, data: { method: :delete, confirm: "ログアウトしますか？" }, class: "btn btn-secondary btn-small" %>
      </div>
    </div>
  <% else %>
    <div class="auth-section">
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">🎯</div>
          <h3>パーソナライズド</h3>
          <p>あなたの肌質に合わせた専用処方</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">⚗️</div>
          <h3>専門的処方</h3>
          <p>化粧品開発の専門知識を活用</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">⚡</div>
          <h3>瞬時に生成</h3>
          <p>数秒で詳細な処方レポート</p>
        </div>
      </div>
      
      <div class="auth-links">
        <%= link_to "無料で始める", new_user_registration_path, class: "btn btn-primary btn-large" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline" %>
      </div>
    </div>
  <% end %>
</div>
