<div class="page-header">
  <div class="header-left">
    <h1 class="page-title">🏭 正式発注詳細 #<%= @formal_order.id %></h1>
    <nav class="breadcrumb">
      <%= link_to "← 正式発注一覧", admin_formal_orders_path, class: "breadcrumb-link" %>
    </nav>
  </div>
  <div class="header-right">
    <div class="header-actions">
      <%= link_to "編集", edit_admin_formal_order_path(@formal_order), class: "btn btn-primary" %>
      <% if @formal_order.can_cancel? %>
        <%= link_to "キャンセル", admin_formal_order_path(@formal_order), 
                    method: :delete, 
                    confirm: "この正式発注をキャンセルしますか？", 
                    class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>

<div class="content-grid">
  <!-- 左側: メイン情報 -->
  <div class="main-content">
    
    <!-- 基本情報 -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">基本情報</h3>
        <div class="status-display">
          <span class="status-badge <%= 
            case @formal_order.status
            when 'quote_pending' then 'status-warning'
            when 'quote_approval_pending' then 'status-info'
            when 'confirmed' then 'status-primary'
            when 'manufacturing', 'quality_check', 'preparing_shipment' then 'status-progress'
            when 'shipped', 'delivered' then 'status-success'
            when 'cancelled' then 'status-danger'
            else 'status-info'
            end
          %>">
            <%= @formal_order.status_name %>
          </span>
        </div>
      </div>
      <div class="card-content">
        <div class="info-grid">
          <div class="info-item">
            <label>注文ID</label>
            <div class="order-id">#<%= @formal_order.id %></div>
          </div>
          
          <div class="info-item">
            <label>優先度</label>
            <div>
              <span class="priority-badge priority-<%= @formal_order.priority %>">
                <%= @formal_order.priority_name %>
              </span>
            </div>
          </div>
          
          <div class="info-item">
            <label>発注数量</label>
            <div><%= @formal_order.quantity.to_s(:delimited) %>個</div>
          </div>
          
          <div class="info-item">
            <label>発注日時</label>
            <div><%= @formal_order.created_at.strftime("%Y年%m月%d日 %H:%M") %></div>
          </div>
          
          <div class="info-item">
            <label>希望納期</label>
            <div>
              <% if @formal_order.estimated_delivery_date %>
                <%= @formal_order.estimated_delivery_date.strftime("%Y年%m月%d日") %>
              <% else %>
                <span class="text-muted">未設定</span>
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <label>追跡番号</label>
            <div>
              <% if @formal_order.tracking_number.present? %>
                <span class="tracking-number"><%= @formal_order.tracking_number %></span>
              <% else %>
                <span class="text-muted">未設定</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 商品情報 -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">商品情報</h3>
      </div>
      <div class="card-content">
        <% if @formal_order.sample %>
          <div class="product-display">
            <div class="product-header">
              <h4><%= @formal_order.sample.name %></h4>
              <div class="product-badges">
                <span class="badge product-badge">サンプル</span>
                <span class="badge type-badge"><%= @formal_order.sample.product_type %></span>
              </div>
            </div>
            <div class="product-details">
              <p><%= @formal_order.sample.description %></p>
              <div class="product-price">
                サンプル価格: <%= @formal_order.sample.display_price %>
              </div>
            </div>
          </div>
        <% elsif @formal_order.cosmetic_formulation %>
          <div class="product-display">
            <div class="product-header">
              <h4><%= @formal_order.cosmetic_formulation.product_name %></h4>
              <div class="product-badges">
                <span class="badge product-badge">カスタム処方</span>
                <span class="badge type-badge"><%= @formal_order.cosmetic_formulation.product_type_name %></span>
                <span class="badge skin-badge"><%= @formal_order.cosmetic_formulation.skin_type_name %></span>
              </div>
            </div>
            <div class="product-details">
              <div class="formulation-info">
                <p><strong>処方者:</strong> <%= @formal_order.cosmetic_formulation.user.display_name %></p>
                <p><strong>作成日:</strong> <%= @formal_order.cosmetic_formulation.created_at.strftime("%Y年%m月%d日") %></p>
              </div>
            </div>
          </div>
        <% else %>
          <div class="product-display">
            <div class="product-header">
              <h4>カスタム製品</h4>
              <div class="product-badges">
                <span class="badge product-badge">カスタム</span>
              </div>
            </div>
            <div class="product-details">
              <p class="text-muted">商品詳細が設定されていません。</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 企業・担当者情報 -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">企業・担当者情報</h3>
      </div>
      <div class="card-content">
        <div class="info-grid">
          <div class="info-item">
            <label>企業名</label>
            <div>
              <% if @formal_order.company %>
                <%= link_to @formal_order.company.name, admin_company_path(@formal_order.company), class: "company-link" %>
              <% else %>
                <span class="text-muted">未設定</span>
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <label>担当者</label>
            <div><%= @formal_order.contact_name %></div>
          </div>
          
          <div class="info-item">
            <label>電話番号</label>
            <div><%= @formal_order.contact_phone %></div>
          </div>
          
          <div class="info-item">
            <label>発注者</label>
            <div>
              <%= link_to @formal_order.user.display_name, admin_user_path(@formal_order.user), class: "user-link" %>
              <small class="user-email"><%= @formal_order.user.email %></small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 配送先情報 -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">配送先情報</h3>
      </div>
      <div class="card-content">
        <div class="address-display">
          <div class="address-type">
            <% if @formal_order.use_company_address? %>
              <span class="address-badge company-address">会社住所</span>
            <% else %>
              <span class="address-badge custom-address">指定住所</span>
            <% end %>
          </div>
          <div class="address-content">
            <%= simple_format(@formal_order.delivery_full_address) %>
          </div>
        </div>
        
        <% if @formal_order.shipped_at %>
          <div class="shipping-info">
            <div class="info-item">
              <label>発送日時</label>
              <div><%= @formal_order.shipped_at.strftime("%Y年%m月%d日 %H:%M") %></div>
            </div>
          </div>
        <% end %>
        
        <% if @formal_order.delivered_at %>
          <div class="delivery-info">
            <div class="info-item">
              <label>配達完了日時</label>
              <div><%= @formal_order.delivered_at.strftime("%Y年%m月%d日 %H:%M") %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 備考・メモ -->
    <% if @formal_order.notes.present? %>
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">備考・要望</h3>
        </div>
        <div class="card-content">
          <div class="notes-content">
            <%= simple_format(@formal_order.notes) %>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <!-- 右側: サイドバー -->
  <div class="sidebar-content">
    
    <!-- 金額詳細 -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">金額詳細</h3>
      </div>
      <div class="card-content">
        <div class="cost-breakdown">
          <div class="cost-row">
            <span class="cost-label">製品単価</span>
            <span class="cost-value">
              <% if @formal_order.unit_price.present? %>
                ¥<%= @formal_order.unit_price.to_s(:delimited) %>
              <% else %>
                <span class="text-muted">未設定</span>
              <% end %>
            </span>
          </div>
          
          <div class="cost-row">
            <span class="cost-label">製品小計</span>
            <span class="cost-value">
              <% if @formal_order.unit_price.present? %>
                ¥<%= (@formal_order.unit_price * @formal_order.quantity).to_s(:delimited) %>
              <% else %>
                <span class="text-muted">算出中</span>
              <% end %>
            </span>
          </div>
          
          <div class="cost-row">
            <span class="cost-label">製造コスト</span>
            <span class="cost-value">
              <% if @formal_order.manufacturing_cost.present? %>
                ¥<%= @formal_order.manufacturing_cost.to_s(:delimited) %>
              <% else %>
                <span class="text-muted">未設定</span>
              <% end %>
            </span>
          </div>
          
          <div class="cost-row">
            <span class="cost-label">配送料</span>
            <span class="cost-value">
              <% if @formal_order.shipping_cost.present? %>
                ¥<%= @formal_order.shipping_cost.to_s(:delimited) %>
              <% else %>
                <span class="text-muted">未設定</span>
              <% end %>
            </span>
          </div>
          
          <div class="cost-row total">
            <span class="cost-label">総額</span>
            <span class="cost-value">
              <% if @formal_order.total_cost.present? %>
                ¥<%= @formal_order.total_cost.to_s(:delimited) %>
              <% else %>
                <span class="cost-pending">算出中</span>
              <% end %>
            </span>
          </div>
        </div>
        
        <% unless @formal_order.total_cost.present? %>
          <div class="cost-note">
            <p>見積もりは管理者が詳細を確認後に設定されます。</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 進捗状況 -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">進捗状況</h3>
      </div>
      <div class="card-content">
        <div class="progress-timeline">
          <div class="timeline-item <%= 'completed' if %w[quote_pending quote_approval_pending confirmed manufacturing quality_check preparing_shipment shipped delivered].include?(@formal_order.status) %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <div class="timeline-title">発注受付</div>
              <div class="timeline-date"><%= @formal_order.created_at.strftime("%m/%d %H:%M") %></div>
            </div>
          </div>
          
          <div class="timeline-item <%= 'completed' if %w[quote_approval_pending confirmed manufacturing quality_check preparing_shipment shipped delivered].include?(@formal_order.status) %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <div class="timeline-title">見積もり作成</div>
              <div class="timeline-date">
                <% if @formal_order.total_cost.present? %>
                  完了
                <% elsif @formal_order.status == 'quote_pending' %>
                  作業中
                <% else %>
                  待機中
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="timeline-item <%= 'completed' if %w[confirmed manufacturing quality_check preparing_shipment shipped delivered].include?(@formal_order.status) %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <div class="timeline-title">注文確定</div>
              <div class="timeline-date">
                <% if %w[confirmed manufacturing quality_check preparing_shipment shipped delivered].include?(@formal_order.status) %>
                  完了
                <% elsif @formal_order.status == 'quote_approval_pending' %>
                  承認待ち
                <% else %>
                  待機中
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="timeline-item <%= 'completed' if %w[manufacturing quality_check preparing_shipment shipped delivered].include?(@formal_order.status) %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <div class="timeline-title">製造開始</div>
              <div class="timeline-date">
                <% if %w[manufacturing quality_check preparing_shipment shipped delivered].include?(@formal_order.status) %>
                  進行中
                <% else %>
                  待機中
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="timeline-item <%= 'completed' if %w[shipped delivered].include?(@formal_order.status) %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <div class="timeline-title">発送</div>
              <div class="timeline-date">
                <% if @formal_order.shipped_at %>
                  <%= @formal_order.shipped_at.strftime("%m/%d %H:%M") %>
                <% else %>
                  待機中
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="timeline-item <%= 'completed' if @formal_order.status == 'delivered' %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <div class="timeline-title">配達完了</div>
              <div class="timeline-date">
                <% if @formal_order.delivered_at %>
                  <%= @formal_order.delivered_at.strftime("%m/%d %H:%M") %>
                <% else %>
                  待機中
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

