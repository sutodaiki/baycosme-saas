<div class="page-header">
  <div class="header-left">
    <h1 class="page-title">✏️ 正式発注編集 #<%= @formal_order.id %></h1>
    <nav class="breadcrumb">
      <%= link_to "← 発注詳細", admin_formal_order_path(@formal_order), class: "breadcrumb-link" %>
      <span class="breadcrumb-separator">|</span>
      <%= link_to "発注一覧", admin_formal_orders_path, class: "breadcrumb-link" %>
    </nav>
  </div>
</div>

<div class="edit-form-container">
  <%= form_with model: [:admin, @formal_order], local: true, class: "edit-form" do |f| %>
    <% if @formal_order.errors.any? %>
      <div class="error-messages">
        <h4>入力エラーがあります:</h4>
        <ul>
          <% @formal_order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- ステータス・基本情報 -->
    <div class="form-section">
      <h3 class="section-title">ステータス・基本情報</h3>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :status, "ステータス", class: "form-label" %>
          <%= f.select :status, 
              options_from_collection_for_select(FormalOrder::STATUSES.map { |name, value| OpenStruct.new(name: name, value: value) }, :value, :name, @formal_order.status), 
              {}, { class: "form-control" } %>
          <small class="form-help">ステータス変更により自動で日時が設定される場合があります</small>
        </div>
        
        <div class="form-group">
          <%= f.label :priority, "優先度", class: "form-label" %>
          <%= f.select :priority, 
              options_from_collection_for_select(FormalOrder::PRIORITIES.map { |name, value| OpenStruct.new(name: name, value: value) }, :value, :name, @formal_order.priority), 
              {}, { class: "form-control" } %>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :quantity, "発注数量", class: "form-label" %>
          <%= f.number_field :quantity, min: 1, max: 10000, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :estimated_delivery_date, "予定納期", class: "form-label" %>
          <%= f.date_field :estimated_delivery_date, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :tracking_number, "追跡番号", class: "form-label" %>
        <%= f.text_field :tracking_number, class: "form-control", placeholder: "発送時に入力" %>
        <small class="form-help">発送完了後に配送業者から提供される追跡番号</small>
      </div>
    </div>

    <!-- 金額設定 -->
    <div class="form-section">
      <h3 class="section-title">金額設定</h3>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :unit_price, "製品単価", class: "form-label" %>
          <%= f.number_field :unit_price, step: 0.01, class: "form-control", placeholder: "0.00" %>
          <small class="form-help">1個あたりの製品価格</small>
        </div>
        
        <div class="form-group">
          <%= f.label :manufacturing_cost, "製造コスト", class: "form-label" %>
          <%= f.number_field :manufacturing_cost, step: 0.01, class: "form-control", placeholder: "0.00" %>
          <small class="form-help">製造にかかる総コスト</small>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :shipping_cost, "配送料", class: "form-label" %>
          <%= f.number_field :shipping_cost, step: 0.01, class: "form-control", placeholder: "0.00" %>
          <small class="form-help">配送にかかる料金</small>
        </div>
        
        <div class="form-group">
          <%= f.label :total_cost, "総額", class: "form-label" %>
          <%= f.number_field :total_cost, step: 0.01, class: "form-control", placeholder: "0.00" %>
          <small class="form-help">最終的な総額（自動計算されます）</small>
        </div>
      </div>
    </div>

    <!-- 担当者情報 -->
    <div class="form-section">
      <h3 class="section-title">担当者情報</h3>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :contact_name, "担当者氏名", class: "form-label" %>
          <%= f.text_field :contact_name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :contact_phone, "電話番号", class: "form-label" %>
          <%= f.text_field :contact_phone, class: "form-control" %>
        </div>
      </div>
    </div>

    <!-- 配送情報 -->
    <div class="form-section">
      <h3 class="section-title">配送情報</h3>
      
      <div class="address-type-display">
        <div class="address-type-info">
          <strong>配送先種別:</strong>
          <% if @formal_order.use_company_address? %>
            <span class="address-badge company-address">会社住所</span>
          <% else %>
            <span class="address-badge custom-address">指定住所</span>
          <% end %>
        </div>
      </div>
      
      <% unless @formal_order.use_company_address? %>
        <div class="custom-address-form">
          <div class="form-row">
            <div class="form-group">
              <%= f.label :delivery_postal_code, "郵便番号", class: "form-label" %>
              <%= f.text_field :delivery_postal_code, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :delivery_prefecture, "都道府県", class: "form-label" %>
              <%= f.select :delivery_prefecture, 
                  options_for_select([
                    ['北海道', '北海道'], ['青森県', '青森県'], ['岩手県', '岩手県'], ['宮城県', '宮城県'], ['秋田県', '秋田県'], ['山形県', '山形県'], ['福島県', '福島県'],
                    ['茨城県', '茨城県'], ['栃木県', '栃木県'], ['群馬県', '群馬県'], ['埼玉県', '埼玉県'], ['千葉県', '千葉県'], ['東京都', '東京都'], ['神奈川県', '神奈川県'],
                    ['新潟県', '新潟県'], ['富山県', '富山県'], ['石川県', '石川県'], ['福井県', '福井県'], ['山梨県', '山梨県'], ['長野県', '長野県'], ['岐阜県', '岐阜県'], ['静岡県', '静岡県'], ['愛知県', '愛知県'],
                    ['三重県', '三重県'], ['滋賀県', '滋賀県'], ['京都府', '京都府'], ['大阪府', '大阪府'], ['兵庫県', '兵庫県'], ['奈良県', '奈良県'], ['和歌山県', '和歌山県'],
                    ['鳥取県', '鳥取県'], ['島根県', '島根県'], ['岡山県', '岡山県'], ['広島県', '広島県'], ['山口県', '山口県'], ['徳島県', '徳島県'], ['香川県', '香川県'], ['愛媛県', '愛媛県'], ['高知県', '高知県'],
                    ['福岡県', '福岡県'], ['佐賀県', '佐賀県'], ['長崎県', '長崎県'], ['熊本県', '熊本県'], ['大分県', '大分県'], ['宮崎県', '宮崎県'], ['鹿児島県', '鹿児島県'], ['沖縄県', '沖縄県']
                  ], @formal_order.delivery_prefecture), 
                  { prompt: '都道府県を選択' }, { class: 'form-control' } %>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <%= f.label :delivery_city, "市区町村", class: "form-label" %>
              <%= f.text_field :delivery_city, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :delivery_street, "町名・番地", class: "form-label" %>
              <%= f.text_field :delivery_street, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :delivery_building, "建物名・部屋番号", class: "form-label" %>
            <%= f.text_field :delivery_building, class: "form-control" %>
          </div>
        </div>
      <% end %>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :shipped_at, "発送日時", class: "form-label" %>
          <%= f.datetime_local_field :shipped_at, 
              value: (@formal_order.shipped_at&.strftime('%Y-%m-%dT%H:%M')), 
              class: "form-control" %>
          <small class="form-help">実際の発送日時</small>
        </div>
        
        <div class="form-group">
          <%= f.label :delivered_at, "配達完了日時", class: "form-label" %>
          <%= f.datetime_local_field :delivered_at, 
              value: (@formal_order.delivered_at&.strftime('%Y-%m-%dT%H:%M')), 
              class: "form-control" %>
          <small class="form-help">配達が完了した日時</small>
        </div>
      </div>
    </div>

    <!-- 備考・メモ -->
    <div class="form-section">
      <h3 class="section-title">備考・内部メモ</h3>
      
      <div class="form-group">
        <%= f.label :notes, "備考・要望", class: "form-label" %>
        <%= f.text_area :notes, rows: 5, class: "form-control", 
            placeholder: "顧客からの要望、内部メモ、特別な指示事項など" %>
        <small class="form-help">最大2000文字まで</small>
      </div>
    </div>

    <!-- 商品情報（読み取り専用） -->
    <div class="form-section readonly-section">
      <h3 class="section-title">商品情報（参考）</h3>
      
      <div class="readonly-content">
        <% if @formal_order.sample %>
          <div class="product-info">
            <h4 class="product-name"><%= @formal_order.sample.name %></h4>
            <div class="product-details">
              <span class="product-badge">サンプル</span>
              <span class="type-badge"><%= @formal_order.sample.product_type %></span>
            </div>
            <p class="product-description"><%= @formal_order.sample.description %></p>
            <div class="product-price">サンプル価格: <%= @formal_order.sample.display_price %></div>
          </div>
        <% elsif @formal_order.cosmetic_formulation %>
          <div class="product-info">
            <h4 class="product-name"><%= @formal_order.cosmetic_formulation.product_name %></h4>
            <div class="product-details">
              <span class="product-badge">カスタム処方</span>
              <span class="type-badge"><%= @formal_order.cosmetic_formulation.product_type_name %></span>
              <span class="skin-badge"><%= @formal_order.cosmetic_formulation.skin_type_name %></span>
            </div>
            <div class="formulation-details">
              <p><strong>処方者:</strong> <%= @formal_order.cosmetic_formulation.user.display_name %></p>
              <p><strong>作成日:</strong> <%= @formal_order.cosmetic_formulation.created_at.strftime("%Y年%m月%d日") %></p>
            </div>
          </div>
        <% else %>
          <div class="product-info">
            <h4 class="product-name">カスタム製品</h4>
            <div class="product-details">
              <span class="product-badge">カスタム</span>
            </div>
            <p class="product-description">詳細な商品情報は設定されていません</p>
          </div>
        <% end %>
        
        <div class="order-info">
          <div class="order-detail">
            <span class="detail-label">発注者:</span>
            <span class="detail-value"><%= @formal_order.user.display_name %> (<%= @formal_order.user.email %>)</span>
          </div>
          <div class="order-detail">
            <span class="detail-label">企業:</span>
            <span class="detail-value"><%= @formal_order.company&.name || '未設定' %></span>
          </div>
          <div class="order-detail">
            <span class="detail-label">発注日:</span>
            <span class="detail-value"><%= @formal_order.created_at.strftime("%Y年%m月%d日 %H:%M") %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- 送信ボタン -->
    <div class="form-actions">
      <%= f.submit "更新する", class: "btn btn-primary btn-lg" %>
      <%= link_to "キャンセル", admin_formal_order_path(@formal_order), class: "btn btn-outline btn-lg" %>
    </div>
  <% end %>
</div>

