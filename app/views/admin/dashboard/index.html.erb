<div class="page-header">
  <h1 class="page-title">📊 ダッシュボード</h1>
  <p class="page-description">システム全体の概要と最新の活動状況</p>
</div>

<!-- KPI カード -->
<div class="kpi-grid">
  <div class="kpi-card">
    <div class="kpi-icon">🏢</div>
    <div class="kpi-content">
      <div class="kpi-value"><%= @total_companies %></div>
      <div class="kpi-label">登録企業数</div>
      <div class="kpi-detail">アクティブ: <%= @active_companies %>社</div>
    </div>
  </div>

  <div class="kpi-card">
    <div class="kpi-icon">👥</div>
    <div class="kpi-content">
      <div class="kpi-value"><%= @total_users %></div>
      <div class="kpi-label">総ユーザー数</div>
      <div class="kpi-detail">システム利用者</div>
    </div>
  </div>

  <div class="kpi-card">
    <div class="kpi-icon">⚗️</div>
    <div class="kpi-content">
      <div class="kpi-value"><%= @total_formulations %></div>
      <div class="kpi-label">処方開発数</div>
      <div class="kpi-detail">今月: <%= @monthly_formulations %>件</div>
    </div>
  </div>
</div>

<!-- コンテンツグリッド -->
<div class="content-grid">
  <!-- 最近の企業登録 -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">🏢 最近登録された企業</h3>
      <%= link_to "すべて見る", admin_companies_path, class: "btn btn-outline btn-sm" %>
    </div>
    <div class="card-content">
      <% if @recent_companies.any? %>
        <div class="table-responsive">
          <table class="admin-table">
            <thead>
              <tr>
                <th>会社名</th>
                <th>プラン</th>
                <th>ステータス</th>
                <th>登録日</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_companies.each do |company| %>
                <tr>
                  <td>
                    <div class="company-cell">
                      <strong><%= company.name %></strong>
                      <small class="text-muted"><%= truncate(company.address, length: 40) %></small>
                    </div>
                  </td>
                  <td>
                    <span class="status-badge status-info">
                      <%= company.plan_name %>
                    </span>
                  </td>
                  <td>
                    <span class="status-badge <%= company.active? ? 'status-success' : 'status-warning' %>">
                      <%= company.status_name %>
                    </span>
                  </td>
                  <td><%= company.created_at.strftime("%m/%d") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="empty-state">
          <div class="empty-icon">🏢</div>
          <p class="empty-message">まだ企業の登録がありません</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 最近の処方開発活動 -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">⚗️ 最近の処方開発</h3>
      <%= link_to "すべて見る", admin_formulations_path, class: "btn btn-outline btn-sm" %>
    </div>
    <div class="card-content">
      <% if @recent_formulations.any? %>
        <div class="table-responsive">
          <table class="admin-table">
            <thead>
              <tr>
                <th>開発者</th>
                <th>商品タイプ</th>
                <th>開発日時</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_formulations.each do |formulation| %>
                <tr>
                  <td>
                    <div class="user-cell">
                      <strong><%= formulation.user.display_name %></strong>
                      <small class="text-muted"><%= formulation.user.company&.name || '未所属' %></small>
                    </div>
                  </td>
                  <td><%= formulation.product_type_name %></td>
                  <td><%= formulation.created_at.strftime("%m/%d %H:%M") %></td>
                  <td>
                    <% if formulation.formulation.present? %>
                      <span class="status-badge status-success">完了</span>
                    <% else %>
                      <span class="status-badge status-warning">処理中</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="empty-state">
          <div class="empty-icon">⚗️</div>
          <p class="empty-message">まだ処方開発の活動がありません</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.kpi-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.kpi-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 1.5rem;
  border-radius: 1rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07), 0 1px 3px rgba(0, 0, 0, 0.06);
}

.kpi-icon {
  font-size: 2.5rem;
  opacity: 0.9;
}

.kpi-content {
  flex: 1;
}

.kpi-value {
  font-size: 2rem;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 0.25rem;
}

.kpi-label {
  font-size: 0.875rem;
  font-weight: 500;
  opacity: 0.9;
  margin-bottom: 0.25rem;
}

.kpi-detail {
  font-size: 0.75rem;
  opacity: 0.8;
}

.content-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
  gap: 1.5rem;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-sm {
  padding: 0.375rem 0.75rem;
  font-size: 0.75rem;
}

.company-cell,
.user-cell {
  display: flex;
  flex-direction: column;
  gap: 0.125rem;
}

.text-muted {
  color: #6b7280;
  font-size: 0.75rem;
}

.empty-state {
  text-align: center;
  padding: 3rem 1rem;
  color: #9ca3af;
}

.empty-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.empty-message {
  font-size: 0.875rem;
  margin: 0;
}

@media (max-width: 768px) {
  .kpi-grid {
    grid-template-columns: 1fr;
  }
  
  .content-grid {
    grid-template-columns: 1fr;
  }
  
  .kpi-card {
    padding: 1rem;
  }
  
  .kpi-icon {
    font-size: 2rem;
  }
  
  .kpi-value {
    font-size: 1.5rem;
  }
}
</style>