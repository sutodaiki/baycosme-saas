<div class="page-header">
  <h1 class="page-title">⚗️ 処方管理</h1>
  <p class="page-description">AI生成された化粧品処方の管理と分析</p>
</div>

<!-- 統計情報 -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-value"><%= @stats[:total] %></div>
    <div class="stat-label">総処方数</div>
  </div>
  <div class="stat-card stat-success">
    <div class="stat-value"><%= @stats[:completed] %></div>
    <div class="stat-label">完了済み</div>
  </div>
  <div class="stat-card stat-warning">
    <div class="stat-value"><%= @stats[:pending] %></div>
    <div class="stat-label">処理中</div>
  </div>
  <div class="stat-card stat-info">
    <div class="stat-value"><%= @stats[:this_month] %></div>
    <div class="stat-label">今月</div>
  </div>
  <div class="stat-card stat-active">
    <div class="stat-value"><%= @stats[:this_week] %></div>
    <div class="stat-label">今週</div>
  </div>
</div>

<!-- 商品タイプ別統計 -->
<div class="product-type-stats">
  <h3>商品タイプ別統計</h3>
  <div class="type-stats-grid">
    <% @stats[:product_types].each do |product_type, count| %>
      <div class="type-stat">
        <div class="type-count"><%= count %></div>
        <div class="type-name">
          <%= CosmeticFormulation::PRODUCT_TYPES.find { |name, value| value == product_type }&.first || product_type %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- 検索・フィルター -->
<div class="card search-card">
  <div class="card-content">
    <%= form_with url: admin_formulations_path, method: :get, local: true, class: "search-form" do |f| %>
      <div class="search-row">
        <div class="form-group">
          <%= f.label :search, "検索", class: "form-label" %>
          <%= f.text_field :search, value: params[:search], placeholder: "企業名・ユーザー名・商品タイプで検索", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :product_type, "商品タイプ", class: "form-label" %>
          <%= f.select :product_type, 
              options_for_select([['すべて', 'all']] + CosmeticFormulation::PRODUCT_TYPES, params[:product_type]), 
              {}, { class: "form-control" } %>
        </div>
        
        <div class="form-group">
          <%= f.label :skin_type, "肌タイプ", class: "form-label" %>
          <%= f.select :skin_type, 
              options_for_select([['すべて', 'all']] + CosmeticFormulation::SKIN_TYPES, params[:skin_type]), 
              {}, { class: "form-control" } %>
        </div>
        
        <div class="form-group">
          <%= f.label :status, "ステータス", class: "form-label" %>
          <%= f.select :status, 
              options_for_select([
                ['すべて', ''],
                ['完了済み', 'completed'],
                ['処理中', 'pending']
              ], params[:status]), 
              {}, { class: "form-control" } %>
        </div>
        
        <div class="form-group search-actions">
          <%= f.submit "検索", class: "btn btn-primary" %>
          <%= link_to "リセット", admin_formulations_path, class: "btn btn-outline" %>
        </div>
      </div>
      
      <div class="date-filters">
        <div class="form-group">
          <%= f.label :date_from, "開始日", class: "form-label" %>
          <%= f.date_field :date_from, value: params[:date_from], class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :date_to, "終了日", class: "form-label" %>
          <%= f.date_field :date_to, value: params[:date_to], class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :sort, "並び順", class: "form-label" %>
          <%= f.select :sort, 
              options_for_select([
                ['作成日（新しい順）', 'created_desc'],
                ['作成日（古い順）', 'created_asc'],
                ['ユーザー名順', 'user'],
                ['企業名順', 'company'],
                ['商品タイプ順', 'product_type']
              ], params[:sort]), 
              {}, { class: "form-control" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- 処方一覧 -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">処方一覧（<%= @formulations.total_count %>件）</h3>
  </div>
  <div class="card-content">
    <% if @formulations.any? %>
      <div class="table-responsive">
        <table class="admin-table">
          <thead>
            <tr>
              <th>開発者・企業</th>
              <th>商品タイプ</th>
              <th>対象・肌タイプ</th>
              <th>悩み</th>
              <th>ステータス</th>
              <th>サンプル注文</th>
              <th>作成日</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @formulations.each do |formulation| %>
              <tr>
                <td>
                  <div class="developer-info">
                    <strong><%= formulation.user.display_name %></strong>
                    <div class="company-name">
                      <%= formulation.user.company&.name || '未所属' %>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="product-type-badge">
                    <%= formulation.product_type_name %>
                  </span>
                </td>
                <td>
                  <div class="target-info">
                    <div><%= formulation.target_age_name %></div>
                    <small class="text-muted"><%= formulation.skin_type_name %></small>
                  </div>
                </td>
                <td>
                  <div class="concerns-list">
                    <%= truncate(formulation.concerns_name, length: 30) %>
                  </div>
                </td>
                <td>
                  <% if formulation.formulation.present? %>
                    <span class="status-badge status-success">完了</span>
                  <% else %>
                    <span class="status-badge status-warning">処理中</span>
                  <% end %>
                </td>
                <td class="orders-cell">
                  <% orders_count = formulation.sample_orders.count %>
                  <% if orders_count > 0 %>
                    <strong><%= orders_count %></strong>件
                  <% else %>
                    <span class="text-muted">なし</span>
                  <% end %>
                </td>
                <td>
                  <%= formulation.created_at.strftime("%m/%d %H:%M") %>
                </td>
                <td>
                  <div class="action-buttons">
                    <%= link_to "詳細", admin_formulation_path(formulation), class: "btn btn-sm btn-outline" %>
                    <%= link_to "削除", admin_formulation_path(formulation), method: :delete, 
                        confirm: "この処方を削除してもよろしいですか？", 
                        class: "btn btn-sm btn-outline btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- ページネーション -->
      <div class="pagination-wrapper">
        <%= paginate @formulations %>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">⚗️</div>
        <h3 class="empty-title">処方が見つかりません</h3>
        <p class="empty-message">検索条件を変更するか、新しい処方の開発をお待ちください。</p>
      </div>
    <% end %>
  </div>
</div>

