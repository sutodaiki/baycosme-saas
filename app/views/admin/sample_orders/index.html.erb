<div class="page-header">
  <h1 class="page-title">🧪 サンプル注文管理</h1>
  <p class="page-description">処方に基づくサンプル製品の注文・製造・配送管理</p>
</div>

<!-- 統計情報 -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-value"><%= @stats[:total] %></div>
    <div class="stat-label">総注文数</div>
  </div>
  <div class="stat-card stat-warning">
    <div class="stat-value"><%= @stats[:pending] %></div>
    <div class="stat-label">受付中</div>
  </div>
  <div class="stat-card stat-info">
    <div class="stat-value"><%= @stats[:in_progress] %></div>
    <div class="stat-label">製造・準備中</div>
  </div>
  <div class="stat-card stat-success">
    <div class="stat-value"><%= @stats[:completed] %></div>
    <div class="stat-label">完了</div>
  </div>
  <div class="stat-card stat-danger">
    <div class="stat-value"><%= @stats[:urgent] %></div>
    <div class="stat-label">緊急</div>
  </div>
  <div class="stat-card stat-revenue">
    <div class="stat-value">¥<%= number_with_delimiter(@stats[:total_revenue]) %></div>
    <div class="stat-label">総売上</div>
  </div>
</div>

<!-- 検索・フィルター -->
<div class="card search-card">
  <div class="card-content">
    <%= form_with url: admin_sample_orders_path, method: :get, local: true, class: "search-form" do |f| %>
      <div class="search-row">
        <div class="form-group">
          <%= f.label :search, "検索", class: "form-label" %>
          <%= f.text_field :search, value: params[:search], placeholder: "企業名・担当者名で検索", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :status, "ステータス", class: "form-label" %>
          <%= f.select :status, 
              options_for_select([
                ['すべて', 'all'],
                ['注文受付', 'pending'],
                ['製造中', 'manufacturing'],
                ['品質確認中', 'quality_check'],
                ['発送準備中', 'preparing_shipment'],
                ['発送済み', 'shipped'],
                ['配達完了', 'delivered'],
                ['キャンセル', 'cancelled']
              ], params[:status]), 
              {}, { class: "form-control" } %>
        </div>
        
        <div class="form-group">
          <%= f.label :priority, "優先度", class: "form-label" %>
          <%= f.select :priority, 
              options_for_select([
                ['すべて', 'all'],
                ['通常', 'normal'],
                ['高', 'high'],
                ['緊急', 'urgent']
              ], params[:priority]), 
              {}, { class: "form-control" } %>
        </div>
        
        <div class="form-group">
          <%= f.label :sort, "並び順", class: "form-label" %>
          <%= f.select :sort, 
              options_for_select([
                ['注文日（新しい順）', 'created_desc'],
                ['注文日（古い順）', 'created_asc'],
                ['優先度順', 'priority_desc'],
                ['企業名順', 'company'],
                ['コスト順', 'cost_desc']
              ], params[:sort]), 
              {}, { class: "form-control" } %>
        </div>
        
        <div class="form-group search-actions">
          <%= f.submit "検索", class: "btn btn-primary" %>
          <%= link_to "リセット", admin_sample_orders_path, class: "btn btn-outline" %>
        </div>
      </div>
      
      <div class="date-filters">
        <div class="form-group">
          <%= f.label :date_from, "開始日", class: "form-label" %>
          <%= f.date_field :date_from, value: params[:date_from], class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :date_to, "終了日", class: "form-label" %>
          <%= f.date_field :date_to, value: params[:date_to], class: "form-control" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- サンプル注文一覧 -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">注文一覧（<%= @sample_orders.total_count %>件）</h3>
  </div>
  <div class="card-content">
    <% if @sample_orders.any? %>
      <div class="table-responsive">
        <table class="admin-table">
          <thead>
            <tr>
              <th>注文ID</th>
              <th>企業・担当者</th>
              <th>商品タイプ</th>
              <th>数量</th>
              <th>優先度</th>
              <th>ステータス</th>
              <th>見積金額</th>
              <th>注文日</th>
              <th>完了予定</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @sample_orders.each do |order| %>
              <tr class="<%= 'urgent-row' if order.priority == 'urgent' %>">
                <td>
                  <strong class="order-id">
                    <%= link_to "##{order.id}", admin_sample_order_path(order), class: "order-link" %>
                  </strong>
                </td>
                <td>
                  <div class="client-info">
                    <strong><%= order.company.name %></strong>
                    <div class="contact-name"><%= order.contact_name %></div>
                    <small class="text-muted"><%= order.user.display_name %></small>
                  </div>
                </td>
                <td>
                  <div class="product-info">
                    <strong><%= order.cosmetic_formulation.product_type_name %></strong>
                    <small class="text-muted d-block">
                      <%= truncate(order.cosmetic_formulation.skin_type_name, length: 15) %>
                    </small>
                  </div>
                </td>
                <td class="quantity-cell">
                  <strong><%= order.quantity %></strong>個
                </td>
                <td>
                  <span class="priority-badge priority-<%= order.priority %>">
                    <%= order.priority_name %>
                  </span>
                </td>
                <td>
                  <span class="status-badge <%= 
                    case order.status
                    when 'pending' then 'status-warning'
                    when 'manufacturing', 'quality_check', 'preparing_shipment' then 'status-info'
                    when 'shipped', 'delivered' then 'status-success'
                    when 'cancelled' then 'status-danger'
                    else 'status-info'
                    end
                  %>">
                    <%= order.status_name %>
                  </span>
                </td>
                <td class="cost-cell">
                  <strong>¥<%= number_with_delimiter(order.total_cost) %></strong>
                </td>
                <td>
                  <%= order.created_at.strftime("%m/%d") %>
                  <small class="text-muted d-block">
                    <%= order.created_at.strftime("%H:%M") %>
                  </small>
                </td>
                <td>
                  <% if order.estimated_completion_date %>
                    <%= order.estimated_completion_date.strftime("%m/%d") %>
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td>
                  <div class="action-buttons">
                    <%= link_to "詳細", admin_sample_order_path(order), class: "btn btn-sm btn-outline" %>
                    <%= link_to "編集", edit_admin_sample_order_path(order), class: "btn btn-sm btn-outline" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- ページネーション -->
      <div class="pagination-wrapper">
        <%= paginate @sample_orders %>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">🧪</div>
        <h3 class="empty-title">サンプル注文が見つかりません</h3>
        <p class="empty-message">検索条件を変更するか、新しい注文をお待ちください。</p>
      </div>
    <% end %>
  </div>
</div>

<style>
