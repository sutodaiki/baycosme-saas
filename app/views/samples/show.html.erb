<div class="sample-detail-page">
  <!-- パンくずナビ -->
  <nav class="breadcrumb">
    <%= link_to samples_path, class: "breadcrumb-link" do %>
      ← サンプル一覧に戻る
    <% end %>
  </nav>

  <div class="sample-detail-container">
    <!-- サンプル画像 -->
    <div class="sample-image-section">
      <div class="sample-main-image">
        <% if @sample.image_url.present? %>
          <%= image_tag @sample.image_url, alt: @sample.name, class: "sample-image" %>
        <% else %>
          <div class="sample-placeholder">
            <span class="placeholder-icon">🧴</span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- サンプル情報 -->
    <div class="sample-info-section">
      <div class="sample-header">
        <div class="sample-badges">
          <span class="product-type-badge"><%= @sample.product_type %></span>
          <span class="status-badge <%= @sample.available? ? 'status-available' : 'status-unavailable' %>">
            <%= @sample.available? ? '在庫あり' : '在庫なし' %>
          </span>
        </div>
        <h1 class="sample-title"><%= @sample.name %></h1>
      </div>

      <div class="price-section">
        <span class="price"><%= @sample.display_price %></span>
      </div>

      <div class="sample-description">
        <h3>商品説明</h3>
        <p><%= simple_format(@sample.description) %></p>
      </div>

      <div class="sample-specs">
        <h3>商品仕様</h3>
        <div class="specs-grid">
          <div class="spec-item">
            <span class="spec-label">商品タイプ:</span>
            <span class="spec-value"><%= @sample.product_type %></span>
          </div>
          <div class="spec-item">
            <span class="spec-label">ステータス:</span>
            <span class="spec-value"><%= @sample.available? ? '販売中' : '販売停止中' %></span>
          </div>
        </div>
      </div>

      <!-- 注文ボタン -->
      <div class="order-section">
        <% if @sample.available? %>
          <%= link_to new_sample_order_path(sample_id: @sample.id), class: "btn btn-primary btn-lg order-btn" do %>
            <span class="btn-icon">🛒</span>
            このサンプルを注文する
          <% end %>
        <% else %>
          <button class="btn btn-disabled btn-lg" disabled>
            <span class="btn-icon">❌</span>
            現在注文できません
          </button>
        <% end %>
        
        <p class="order-note">
          ※ サンプル注文は無料です。送料のみご負担いただきます。
        </p>
      </div>
    </div>
  </div>

  <!-- 関連サンプル -->
  <div class="related-samples">
    <h3>同じカテゴリのサンプル</h3>
    <% related_samples = Sample.where(product_type: @sample.product_type).where.not(id: @sample.id).limit(4) %>
    <% if related_samples.any? %>
      <div class="related-grid">
        <% related_samples.each do |sample| %>
          <div class="related-card">
            <%= link_to sample_path(sample), class: "related-link" do %>
              <div class="related-image">
                <% if sample.image_url.present? %>
                  <%= image_tag sample.image_url, alt: sample.name %>
                <% else %>
                  <div class="related-placeholder">🧴</div>
                <% end %>
              </div>
              <div class="related-info">
                <h4><%= sample.name %></h4>
                <p class="related-price"><%= sample.display_price %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="no-related">同じカテゴリの他のサンプルは現在ありません。</p>
    <% end %>
  </div>
</div>

