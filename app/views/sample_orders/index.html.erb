<div class="sample-orders-page">
  <!-- ページヘッダー -->
  <div class="page-header">
    <div class="header-content">
      <h1 class="page-title">📋 サンプル注文履歴</h1>
      <p class="page-description">あなたが注文したサンプルの一覧です</p>
    </div>
  </div>

  <!-- 注文一覧 -->
  <div class="orders-section">
    <% if @sample_orders.any? %>
      <div class="orders-list">
        <% @sample_orders.each do |order| %>
          <div class="order-card">
            <div class="order-header">
              <div class="order-info">
                <h3 class="order-title">
                  <% if order.sample %>
                    <%= order.sample.name %>
                  <% elsif order.cosmetic_formulation %>
                    <%= order.cosmetic_formulation.product_name %>
                  <% else %>
                    サンプル注文 #<%= order.id %>
                  <% end %>
                </h3>
                <div class="order-meta">
                  <span class="order-id">#<%= order.id %></span>
                  <span class="order-date"><%= order.created_at.strftime('%Y年%m月%d日') %></span>
                </div>
              </div>
              <div class="order-status">
                <span class="status-badge status-<%= order.status %>">
                  <%= order.status_name %>
                </span>
              </div>
            </div>
            
            <div class="order-details">
              <div class="detail-grid">
                <div class="detail-item">
                  <span class="detail-label">数量:</span>
                  <span class="detail-value"><%= order.quantity %></span>
                </div>
                <div class="detail-item">
                  <span class="detail-label">優先度:</span>
                  <span class="detail-value"><%= order.priority_name %></span>
                </div>
                <div class="detail-item">
                  <span class="detail-label">総額:</span>
                  <span class="detail-value">¥<%= order.total_cost.to_s(:delimited) %></span>
                </div>
                <% if order.estimated_completion_date %>
                  <div class="detail-item">
                    <span class="detail-label">完了予定:</span>
                    <span class="detail-value"><%= order.estimated_completion_date.strftime('%Y年%m月%d日') %></span>
                  </div>
                <% end %>
              </div>
              
              <% if order.notes.present? %>
                <div class="order-notes">
                  <span class="notes-label">備考:</span>
                  <p class="notes-text"><%= simple_format(order.notes) %></p>
                </div>
              <% end %>
            </div>
            
            <div class="order-actions">
              <%= link_to "詳細を見る", sample_order_path(order), class: "btn btn-outline btn-sm" %>
              <% if order.can_cancel? %>
                <%= link_to "キャンセル", "#", class: "btn btn-danger btn-sm", 
                    onclick: "return confirm('本当にキャンセルしますか？')" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- ページネーション -->
      <% if @sample_orders.respond_to?(:current_page) %>
        <div class="pagination-wrapper">
          <%= paginate @sample_orders %>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">📦</div>
        <h3>サンプル注文履歴がありません</h3>
        <p>まだサンプルを注文していません。お気に入りのサンプルを見つけて注文してみましょう。</p>
        <%= link_to "サンプル一覧を見る", samples_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

