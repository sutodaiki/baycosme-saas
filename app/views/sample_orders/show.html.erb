<div class="sample-order-detail-page">
  <!-- パンくずナビ -->
  <nav class="breadcrumb">
    <%= link_to sample_orders_path, class: "breadcrumb-link" do %>
      ← サンプル注文履歴に戻る
    <% end %>
  </nav>

  <div class="order-detail-container">
    <!-- 注文ヘッダー -->
    <div class="order-header-card">
      <div class="header-content">
        <div class="order-title-section">
          <h1 class="order-title">
            <span class="order-icon">📋</span>
            サンプル注文詳細
          </h1>
          <div class="order-meta">
            <span class="order-id">注文番号: #<%= @sample_order.id %></span>
            <span class="order-date">注文日: <%= @sample_order.created_at.strftime('%Y年%m月%d日 %H:%M') %></span>
          </div>
        </div>
        <div class="order-status-section">
          <span class="status-badge status-<%= @sample_order.status %>">
            <%= @sample_order.status_name %>
          </span>
        </div>
      </div>
    </div>

    <div class="order-content">
      <!-- サンプル情報 -->
      <div class="content-section sample-section">
        <h3 class="section-title">🧴 注文商品</h3>
        <div class="sample-info">
          <div class="sample-image">
            <% if @sample_order.sample&.image_url.present? %>
              <%= image_tag @sample_order.sample.image_url, alt: @sample_order.sample.name %>
            <% else %>
              <div class="sample-placeholder">🧴</div>
            <% end %>
          </div>
          <div class="sample-details">
            <h4 class="sample-name">
              <% if @sample_order.sample %>
                <%= @sample_order.sample.name %>
              <% elsif @sample_order.cosmetic_formulation %>
                <%= @sample_order.cosmetic_formulation.product_name %>
              <% else %>
                カスタムサンプル
              <% end %>
            </h4>
            <div class="sample-meta">
              <% if @sample_order.sample&.product_type %>
                <span class="product-type"><%= @sample_order.sample.product_type %></span>
              <% end %>
              <% if @sample_order.sample %>
                <%= link_to "商品詳細を見る", sample_path(@sample_order.sample), class: "sample-link" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- 注文詳細 -->
      <div class="content-section order-details-section">
        <h3 class="section-title">📊 注文詳細</h3>
        <div class="details-grid">
          <div class="detail-card">
            <div class="detail-icon">📦</div>
            <div class="detail-content">
              <span class="detail-label">数量</span>
              <span class="detail-value"><%= @sample_order.quantity %>個</span>
            </div>
          </div>
          
          <div class="detail-card">
            <div class="detail-icon">⚡</div>
            <div class="detail-content">
              <span class="detail-label">優先度</span>
              <span class="detail-value"><%= @sample_order.priority_name %></span>
            </div>
          </div>
          
          <div class="detail-card">
            <div class="detail-icon">💰</div>
            <div class="detail-content">
              <span class="detail-label">料金</span>
              <span class="detail-value">¥<%= @sample_order.total_cost.to_s(:delimited) %></span>
            </div>
          </div>
          
          <% if @sample_order.estimated_completion_date %>
            <div class="detail-card">
              <div class="detail-icon">📅</div>
              <div class="detail-content">
                <span class="detail-label">完了予定日</span>
                <span class="detail-value"><%= @sample_order.estimated_completion_date.strftime('%Y年%m月%d日') %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 配送先情報 -->
      <% if @sample_order.delivery_address.present? %>
        <div class="content-section delivery-section">
          <h3 class="section-title">🚚 配送先情報</h3>
          <div class="delivery-info">
            <pre class="delivery-address"><%= @sample_order.delivery_address %></pre>
          </div>
        </div>
      <% end %>

      <!-- 備考・要望 -->
      <% if @sample_order.notes.present? %>
        <div class="content-section notes-section">
          <h3 class="section-title">📝 備考・要望</h3>
          <div class="notes-content">
            <p><%= simple_format(@sample_order.notes) %></p>
          </div>
        </div>
      <% end %>

      <!-- ステータス履歴 -->
      <div class="content-section status-history-section">
        <h3 class="section-title">📈 ステータス履歴</h3>
        <div class="status-timeline">
          <div class="timeline-item <%= 'completed' if @sample_order.status != 'pending' %>">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <h4>注文受付</h4>
              <p>注文が受け付けられました</p>
              <span class="timeline-date"><%= @sample_order.created_at.strftime('%Y年%m月%d日 %H:%M') %></span>
            </div>
          </div>
          
          <% if %w[manufacturing quality_check preparing_shipment shipped delivered].include?(@sample_order.status) %>
            <div class="timeline-item <%= 'completed' if @sample_order.status != 'manufacturing' %>">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <h4>製造開始</h4>
                <p>サンプルの製造が開始されました</p>
                <span class="timeline-date">処理中...</span>
              </div>
            </div>
          <% end %>
          
          <% if %w[quality_check preparing_shipment shipped delivered].include?(@sample_order.status) %>
            <div class="timeline-item <%= 'completed' if @sample_order.status != 'quality_check' %>">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <h4>品質確認</h4>
                <p>製品の品質確認を行っています</p>
                <span class="timeline-date">処理中...</span>
              </div>
            </div>
          <% end %>
          
          <% if %w[preparing_shipment shipped delivered].include?(@sample_order.status) %>
            <div class="timeline-item <%= 'completed' if @sample_order.status != 'preparing_shipment' %>">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <h4>発送準備</h4>
                <p>発送の準備を行っています</p>
                <span class="timeline-date">処理中...</span>
              </div>
            </div>
          <% end %>
          
          <% if %w[shipped delivered].include?(@sample_order.status) %>
            <div class="timeline-item <%= 'completed' if @sample_order.status != 'shipped' %>">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <h4>発送完了</h4>
                <p>サンプルを発送しました</p>
                <span class="timeline-date">処理中...</span>
              </div>
            </div>
          <% end %>
          
          <% if @sample_order.status == 'delivered' %>
            <div class="timeline-item completed">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <h4>配達完了</h4>
                <p>サンプルの配達が完了しました</p>
                <span class="timeline-date">完了</span>
              </div>
            </div>
          <% end %>
          
          <% if @sample_order.status == 'cancelled' %>
            <div class="timeline-item cancelled">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <h4>注文キャンセル</h4>
                <p>注文がキャンセルされました</p>
                <span class="timeline-date"><%= @sample_order.updated_at.strftime('%Y年%m月%d日 %H:%M') %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- アクション -->
      <div class="content-section actions-section">
        <div class="action-buttons">
          <% if @sample_order.can_cancel? %>
            <%= link_to "#", class: "btn btn-danger", 
                onclick: "return confirm('本当にこの注文をキャンセルしますか？')" do %>
              <span class="btn-icon">❌</span>
              注文をキャンセル
            <% end %>
          <% end %>
          
          <%= link_to sample_orders_path, class: "btn btn-outline" do %>
            <span class="btn-icon">📋</span>
            注文履歴一覧
          <% end %>
          
          <%= link_to samples_path, class: "btn btn-primary" do %>
            <span class="btn-icon">🧪</span>
            他のサンプルを見る
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

