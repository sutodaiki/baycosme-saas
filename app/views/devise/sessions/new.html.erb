<div class="auth-container">
  <div class="auth-header">
    <h1>ログイン</h1>
    <p class="subtitle">化粧品開発管理システムにアクセス</p>
  </div>

  <div class="card">
    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label required" %>
          <%= f.email_field :email, class: "form-input", placeholder: "例：admin@example.com", autofocus: true, autocomplete: "email", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード", class: "form-label required" %>
          <%= f.password_field :password, class: "form-input", placeholder: "パスワードを入力", autocomplete: "current-password", required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <label class="checkbox-group">
              <%= f.check_box :remember_me %>
              <span class="checkbox-label">ログイン状態を保持する</span>
            </label>
          </div>
        <% end %>

        <div class="form-actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-large" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
