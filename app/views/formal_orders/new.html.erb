<script>
let currentTab = 'sample';

function switchTab(tab) {
  // Update tab buttons
  document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
  document.getElementById(tab + '-tab').classList.add('active');
  
  // Update tab content
  document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
  document.getElementById(tab + '-selection').classList.add('active');
  
  // Clear the other selection
  if (tab === 'sample') {
    document.querySelector('select[name="formal_order[cosmetic_formulation_id]"]').value = '';
  } else {
    document.querySelector('select[name="formal_order[sample_id]"]').value = '';
  }
  
  currentTab = tab;
  updateEstimate();
}

function toggleAddressForm() {
  const companyAddressRadio = document.getElementById('company_address');
  const differentAddressRadio = document.getElementById('different_address');
  const companyAddressDisplay = document.getElementById('company-address-display');
  const differentAddressForm = document.getElementById('different-address-form');
  
  if (companyAddressRadio.checked) {
    companyAddressDisplay.style.display = 'block';
    differentAddressForm.style.display = 'none';
    
    // Remove required attribute from address fields
    const addressFields = differentAddressForm.querySelectorAll('input, select');
    addressFields.forEach(field => {
      field.removeAttribute('required');
    });
  } else {
    companyAddressDisplay.style.display = 'none';
    differentAddressForm.style.display = 'block';
    
    // Add required attribute to address fields (except building)
    const addressFields = differentAddressForm.querySelectorAll('input, select');
    addressFields.forEach(field => {
      if (!field.id.includes('building')) {
        field.setAttribute('required', 'required');
      }
    });
  }
}

function updateEstimate() {
  const quantityField = document.querySelector('input[name="formal_order[quantity]"]');
  const priorityField = document.querySelector('select[name="formal_order[priority]"]');
  const sampleField = document.querySelector('select[name="formal_order[sample_id]"]');
  const formulationField = document.querySelector('select[name="formal_order[cosmetic_formulation_id]"]');
  
  const quantity = parseInt(quantityField.value) || 100;
  const priority = priorityField.value || 'normal';
  
  // Basic unit prices (these would typically come from the server)
  let baseUnitPrice = 200; // Default
  
  if (currentTab === 'sample' && sampleField.value) {
    // Sample-based pricing
    baseUnitPrice = 300; // Sample pricing
  } else if (currentTab === 'formulation' && formulationField.value) {
    // Formulation-based pricing
    baseUnitPrice = 250; // Formulation pricing
  }
  
  // Priority multiplier
  let priorityMultiplier = 1.0;
  if (priority === 'high') priorityMultiplier = 1.3;
  if (priority === 'urgent') priorityMultiplier = 1.8;
  
  // Calculate costs
  const unitPrice = Math.floor(baseUnitPrice * priorityMultiplier);
  const manufacturingCost = Math.floor(quantity * 50 * priorityMultiplier);
  
  let shippingCost = 1000; // Base shipping
  if (quantity > 500) shippingCost = 3000;
  else if (quantity > 100) shippingCost = 2000;
  
  const totalCost = (unitPrice * quantity) + manufacturingCost + shippingCost;
  
  // Update display
  document.getElementById('unit-price').textContent = 'Â¥' + unitPrice.toLocaleString() + ' / å€‹';
  document.getElementById('manufacturing-cost').textContent = 'Â¥' + manufacturingCost.toLocaleString();
  document.getElementById('shipping-cost').textContent = 'Â¥' + shippingCost.toLocaleString();
  document.getElementById('total-cost').textContent = 'Â¥' + totalCost.toLocaleString();
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  toggleAddressForm();
  updateEstimate();
  
  // Add event listeners for estimate updates
  document.querySelector('input[name="formal_order[quantity]"]').addEventListener('input', updateEstimate);
  document.querySelector('select[name="formal_order[priority]"]').addEventListener('change', updateEstimate);
  
  const sampleSelect = document.querySelector('select[name="formal_order[sample_id]"]');
  const formulationSelect = document.querySelector('select[name="formal_order[cosmetic_formulation_id]"]');
  
  if (sampleSelect) sampleSelect.addEventListener('change', updateEstimate);
  if (formulationSelect) formulationSelect.addEventListener('change', updateEstimate);
});
</script>

